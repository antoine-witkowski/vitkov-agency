<h1>Modifier une annonce</h1>

<form>

    <fieldset class="propriete">

        <div>
            <label for="titre">Titre:</label>
            <input type="text" id="titre" value="<%= annonce.titre %>">
        </div>

        <div>
            <label for="description">Description:</label>
            <input type="text" id="description" value="<%= annonce.description %>" >
        </div>

    </fieldset>

    <fieldset class="lieu">

        <h3>Lieu</h3>

        <div>
            <label for="adresse">Adresse:</label>
            <input type="text" id="adresse" value="<%= annonce.adresse %>">
        </div>

        <div>
            <label for="code_postal">Code postal:</label>
            <input type="number" id="code_postal" value="<%= annonce.code_postal %>">
        </div>

        <div>
            <label for="ville">Ville :</label>
            <input type="text" id="ville" value="<%= annonce.ville %>">
        </div>

    </fieldset>

    <fieldset class="prix">

        <div>
            <label for="prix">Prix :</label>
            <input type="number" id="prix" value="<%= annonce.prix %>">
        </div>

    </fieldset>

    <div>
        <button type="submit" onclick="updateAnnonce('<%= annonce._id %>')">Modifier</button>
    </div>

</form>

<%- include('../partials/footer') %>
